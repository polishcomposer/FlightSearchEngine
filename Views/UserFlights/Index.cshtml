@model IEnumerable<FlightSE.Models.UserFlight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFlightTimes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalTime)
            </th>
